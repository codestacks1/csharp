<UserControl x:Class="Xiaowen.Windows.Video.UserControls.LoadingGif"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xiaowen.Windows.Video.UserControls"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="589" d:DesignWidth="1028.833" Foreground="{x:Null}">

    <Grid Margin="-1,0,-1,0">
        <Image x:Name="loadGif" 
               gif:ImageBehavior.AnimatedSource="/Xiaowen.Windows.Video;component/img/launch.gif"
               Stretch="Fill" Width="600px" 
               Height="360px"></Image>
    </Grid>

</UserControl>
