<Window x:Class="Xiaowen.Windows.WeChat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Xiaowen.Windows.WeChat.Views"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        mc:Ignorable="d"        
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen"
        Title="WeChat" Height="600" Width="900" ResizeMode="NoResize" SizeToContent="Manual" Icon="/Xiaowen.Windows.WeChat;component/xiaowen_wechat_logo.ico">
    <Grid>

        <dx:DXTabControl>
            <dx:DXTabItem Header="Home">
                <Grid Background="Transparent"/>
            </dx:DXTabItem>
            <dx:DXTabItem Header="weChatClient">
                <views:WeChatView />
            </dx:DXTabItem>
        </dx:DXTabControl>

    </Grid>
</Window>
